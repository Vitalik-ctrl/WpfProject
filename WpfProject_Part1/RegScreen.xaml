<Window x:Class="WpfProject_Part1.RegScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject_Part1"
        mc:Ignorable="d"
        Title="Registration" Height="700" Width="500" Background="Black">
    
    <StackPanel>

        <Label Content="Registration" HorizontalAlignment="Center" FontSize="35" Foreground="White" Margin="20"/>
     
        <Border BorderBrush="White" BorderThickness="2"></Border>
            <Label Content="Username" Foreground="White" FontSize="30" Margin="20 0"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="35" Margin="20 10 100 0"/>
            <Label Content="Password" Foreground="White" FontSize="30" Margin="20 0"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="40"  Margin="20 10 100 0"/>
        <Border BorderBrush="White" BorderThickness="2" Margin="0 50 0 0 "></Border>
        <Label Content="Необязательные поля" Foreground="White" FontSize="30" Margin="10"/>

    </StackPanel>
    
    
</Window>