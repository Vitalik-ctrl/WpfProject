<Window x:Class="WpfProject_Part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject_Part1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500" Background="Black">
    <Border BorderBrush="Gainsboro" BorderThickness="3">
        <StackPanel>
            <Label Content="Main Window" HorizontalAlignment="Center" FontSize="35" Foreground="White" Margin="20"/>
            <Button Name="btn_Registration" Click="btn_Registration_Click" Content="Registration" Margin=" 60 50" Background="#545d6a" Foreground="White" FontSize="40"/>
            <Button Name="btn_Login" Content="Login" Click="btn_Login_Click" Margin="60 0" Background="#545d6a" Foreground="White" FontSize="40"/>
        </StackPanel>
    </Border>
</Window>
