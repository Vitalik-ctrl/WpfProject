<Window x:Class="WpfProject_Part1.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject_Part1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="500" Background="Black">
    <Border BorderBrush="Gainsboro" BorderThickness="3">
        <StackPanel>
            <Label Content="Login" HorizontalAlignment="Center" FontSize="40" Foreground="White" Margin="20"/>

            <Separator></Separator>
            <Label Content="Username" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="35" Margin="60 10"/>
            <Label Content="Password" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="35" Margin="60 10"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="160 10" Background="#545d6a" Foreground="White" FontSize="25"/>
        </StackPanel>
    </Border>
</Window>